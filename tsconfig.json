{
  "compilerOptions": {
    "esModuleInterop": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./build",
    "paths": {
      "@brer/types": ["./src/types/export.js"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./**/*.spec.ts"
  ]
}
