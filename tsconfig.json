{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "paths": {
      "@brer/*": ["./src/types/*.js"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./bin",
    "./src",
    "./test"
  ],
  "exclude": [
    "./node_modules",
  ]
}
